      <tabular>
        <row>
          <cell><img src="figures/fighyperbola_locate1"/></cell>
          <cell></cell>
          <cell><img src="figures/fighyperbola_locate2"/></cell>
          <cell></cell>
          <cell><img src="figures/fighyperbola_locate3"/></cell>
        </row>
