                return (t.x,t.y,t.x^2*t.y+t.y^2+t.x*t.y);
              }
              surface s=surface(f,(-2,-0.3),(1.5,0.5),16,16,Spline);
              pen p=apexmeshpen;
              draw(s,surfacepen,meshpen=p);

              //plot point on surface
              dotfactor=4;dot((0,0,0));dot((-1,0,0));dot((-1/2,1/8,-.016));

