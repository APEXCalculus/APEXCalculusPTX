      <exercise label="ex-vectors-verify-unit-trig">
        <!-- <webwork xml:id="webwork-ex-vectors-verify-unit-trig">
            <pg-code>
            </pg-code>
             -->
            <statement>
              <p>
                Verify, from <xref ref="idea_unit_vectors"/>,
                that
                <me>
                  \vec u=\la \sin(\theta) \cos(\varphi) ,\sin(\theta) \sin(\varphi) ,\cos(\theta) \ra
                </me>
                is a unit vector for all angles <m>\theta</m> and <m>\varphi</m>.
              </p>
            </statement>
            <solution>
              <p>
                <md>
                  <mrow>\norm{\vec u} \amp = \sqrt{\sin^2(\theta) \cos^2(\varphi) +\sin^2(\theta) \sin^2(\varphi) +\cos^2(\theta) }</mrow>
                  <mrow>\amp = \sqrt{\sin^2(\theta) (\cos^2(\varphi) +\sin^2(\varphi) )+\cos^2(\theta) }</mrow>
                  <mrow>\amp = \sqrt{\sin^2(\theta) +\cos^2(\theta) }</mrow>
                  <mrow>\amp =1</mrow>
                </md>.
              </p>
            </solution>
        <!-- </webwork> -->
      </exercise>

