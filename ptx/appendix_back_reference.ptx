<appendix xml:id="appendix-reference">
  <title>Quick Reference</title>

  <section xml:id="reference-derivatives" label="reference-derivatives">
    <title>Differentiation Formulas</title>
    <list xml:id="reference-deriv-rules">
      <title>Derivative Rules</title>
      <ol cols="2">
        <li>
          <m>\lzo{x}(cx)=c</m>
        </li>

        <li>
          <m>\lzo{x}(u\pm v)=u'\pm v'</m>
        </li>

        <li>
          <m>\lzo{x}(u\cdot v)=uv'+ u'v</m>
        </li>

        <li>
          <m>\lzo{x}(\frac uv)=\frac{vu'-uv'}{v^2}</m>
        </li>

        <li>
          <m>\lzo{x}(u(v))=u'(v)v'</m>
        </li>

        <li>
          <m>\lzo{x}(c)=0</m>
        </li>

        <li>
          <m>\lzo{x}(x)=1</m>
        </li>
      </ol>
    </list>

    <list xml:id="reference-deriv-elementary">
      <title>Derivatives of Elementary Functions</title>
      <ol cols="2">
        <li>
          <m>\lzo{x}(x^n)=nx^{n-1}</m>
        </li>

        <li>
          <m>\lzo{x}(e^x)=e^x</m>
        </li>

        <li>
          <m>\lzo{x}(a^x)=\ln a\cdot a^x</m>
        </li>

        <li>
          <m>\lzo{x}(\ln x)=\frac{1}{x}</m>
        </li>

        <li>
          <m>\lzo{x}(\log_a x)=\frac{1}{\ln a}\cdot \frac1x</m>
        </li>

        <li>
          <m>\lzo{x}(\sin(x))=\cos(x)</m>
        </li>

        <li>
          <m>\lzo{x}(\cos(x))=-\sin(x)</m>
        </li>

        <li>
          <m>\lzo{x}(\csc(x))=-\csc(x)\cot(x)</m>
        </li>

        <li>
          <m>\lzo{x}(\sec(x))=\sec(x)\tan(x)</m>
        </li>

        <li>
          <m>\lzo{x}(\tan(x))=\sec^2(x)</m>
        </li>

        <li>
          <m>\lzo{x}(\cot(x))=-\csc^2(x)</m>
        </li>

        <li>
          <m>\lzo{x}(\cosh=(x))=\sinh(x)</m>
        </li>

        <li>
          <m>\lzo{x}(\sinh(x))=\cosh(x)</m>
        </li>

        <li>
          <m>\lzo{x}(\sech(x))=-\sech(x)\tanh(x)</m>
        </li>

        <li>
          <m>\lzo{x}(\tanh(x))=\sech^2(x)</m>
        </li>

        <li>
          <m>\lzo{x}(\csch(x))=-\csch(x)\coth(x)</m>
        </li>

        <li>
          <m>\lzo{x}(\coth(x))=-\csch^2(x)</m>
        </li>
      </ol>
    </list>

    <list xml:id="reference-deriv-inverse">
      <title>Derivatives of Inverse Functions</title>
      <ol cols="2">
        <li>
          <m>\lzo{x}(\sin^{-1}(x))=\frac{1}{\sqrt{1-x^2}}</m>
        </li>

        <li>
          <m>\lzo{x}(\cos^{-1}(x))=\frac{-1}{\sqrt{1-x^2}}</m>
        </li>

        <li>
          <m>\lzo{x}(\csc^{-1}(x))=\frac{-1}{\abs{x}\sqrt{x^2-1}}</m>
        </li>

        <li>
          <m>\lzo{x}(\sec^{-1}(x))=\frac{1}{\abs{x}\sqrt{x^2-1}}</m>
        </li>

        <li>
          <m>\lzo{x}(\tan^{-1}(x))=\frac{1}{1+x^2}</m>
        </li>

        <li>
          <m>\lzo{x}(\cot^{-1}(x))=\frac{-1}{1+x^2}</m>
        </li>

        <li>
          <m>\lzo{x}(\cosh^{-1}(x))=\frac1{\sqrt{x^2-1}}</m>
        </li>

        <li>
          <m>\lzo{x}(\sinh^{-1}(x))=\frac1{\sqrt{x^2+1}}</m>
        </li>

        <li>
          <m>\lzo{x}(\sech^{-1}(x))=\frac{-1}{x\sqrt{1-x^2}}</m>
        </li>

        <li>
          <m>\lzo{x}(\csch^{-1}(x))=\frac{-1}{\abs{x}\sqrt{1+x^2}}</m>
        </li>

        <li>
          <m>\lzo{x}(\tanh^{-1}(x))=\frac1{1-x^2}</m>
        </li>

        <li>
          <m>\lzo{x}(\coth^{-1}(x))=\frac1{1-x^2}</m>
        </li>
      </ol>
    </list>
  </section>

  <section xml:id="reference-integration" label="reference-integration">
    <title>Integration Formulas</title>

    <list xml:id="reference-int-rules">
      <title>Basic Rules</title>
      <ol cols="2">
        <li>
          <m>\int c\cdot f(x)\,dx=c\int f(x)\,dx</m>
        </li>

        <li>
          <m>\int \bigl(f(x)\pm g(x)\bigr)\,dx = \int f(x)\, dx \pm \int g(x)\, dx</m>
        </li>

        <li>
          <m>\int 0\,dx = C</m>
        </li>

        <li>
          <m>\int 1\,dx=x+C</m>
        </li>
      </ol>
    </list>

    <list xml:id="reference-int-elementary">
      <title>Integrals of Elementary (non-Trig) Functions</title>
      <ol cols="2">
        <li>
          <m>\int e^x\,dx=e^x+C</m>
        </li>

        <li>
          <m>\int \ln(x)\,dx=x\ln(x) -x +C</m>
        </li>

        <li>
          <m>\int a^x\,dx=\frac{1}{\ln(a)}\cdot a^x+C</m>
        </li>

        <li>
          <m>\int \frac{1}{x}\,dx =\ln \abs{x} + C</m>
        </li>

        <li>
          <m>\int x^n\,dx=\frac{1}{n+1}x^{n+1}+C, n\neq -1</m>
        </li>
      </ol>
    </list>

    <list xml:id="reference-int-trig">
      <title>Integrals Involving Trigonometric Functions</title>
      <ol>
        <li>
          <m>\int \cos(x)\,dx=\sin(x)+C</m>
        </li>

        <li>
          <m>\int \sin(x)\,dx=-\cos(x)+C</m>
        </li>

        <li>
          <m>\int \tan(x)\,dx=-\ln \abs{\cos(x)}+C</m>
        </li>

        <li>
          <m>\int \sec(x)\,dx=\ln \abs{\sec(x)+\tan(x)}+C</m>
        </li>

        <li>
          <m>\int \csc(x)\,dx=-\ln \abs{\csc(x)+\cot(x)}+C</m>
        </li>

        <li>
          <m>\int \cot(x)\,dx=\ln \abs{\sin(x)}+C</m>
        </li>

        <li>
          <m>\int \sec^2(x)\,dx=\tan(x)+C</m>
        </li>

        <li>
          <m>\int \csc^2(x)\,dx=-\cot(x)+C</m>
        </li>

        <li>
          <m>\int \sec(x)\tan(x)\,dx=\sec(x)+C</m>
        </li>

        <li>
          <m>\int \csc(x)\cot(x)\,dx=-\csc(x)+C</m>
        </li>

        <li>
          <m>\int \cos^2(x)\,dx=\frac12x+\frac14\sin\big(2x\big)+C</m>
        </li>

        <li>
          <m>\int \sin^2(x)\,dx=\frac12x-\frac14\sin\big(2x\big)+C</m>
        </li>

        <li>
          <m>\int \frac{1}{x^2+a^2}\,dx = \frac1a\tan^{-1}\left(\frac xa\right)+C</m>
        </li>

        <li>
          <m>\int \frac{1}{\sqrt{a^2-x^2}} = \sin^{-1}\left(\frac xa\right)+C</m>
        </li>

        <li>
          <m>\int \frac{1}{x\sqrt{x^2-a^2}} = \frac1a\sec^{-1}\left(\frac{\abs{x}}{a}\right)+C</m>
        </li>
      </ol>
    </list>

    <list xml:id="reference-int-hyper">
      <title>Integrals Involving Hyperbolic Functions</title>
      <ol>
        <li>
          <m>\int \cosh(x)\,dx=\sinh(x)+C</m>
        </li>

        <li>
          <m>\int \sinh(x)\,dx=\cosh(x)+C</m>
        </li>

        <li>
          <m>\int \tanh(x)\,dx=\ln(\cosh(x))+C</m>
        </li>

        <li>
          <m>\int \coth(x)\,dx=\ln \abs{\sinh(x)}+C</m>
        </li>

        <li>
          <m>\int \frac{1}{\sqrt{x^2-a^2}}\, dx =\ln\abs{x+\sqrt{x^2-a^2}}+C</m>
        </li>

        <li>
          <m>\int \frac{1}{\sqrt{x^2+a^2}}\, dx=\ln\abs{x+\sqrt{x^2+a^2}}+C</m>
        </li>

        <li>
          <m>\int \frac{1}{a^2-x^2}\, dx =\frac{1}{2a}\ln\abs{\frac{a+x}{a-x}}+C</m>
        </li>

        <li>
          <m>\int \frac{1}{x\sqrt{a^2-x^2}}\, dx = \frac{1}{a}\ln\left(\frac{x}{a+\sqrt{a^2-x^2}}\right)+C</m>
        </li>

        <li>
          <m>\int \frac{1}{x\sqrt{x^2+a^2}}\, = \frac{1}{a}\ln\abs{\frac{x}{a+\sqrt{x^2+a^2}}}+C</m>
        </li>
      </ol>
    </list>
  </section>

