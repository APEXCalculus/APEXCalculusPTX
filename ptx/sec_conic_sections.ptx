          </figure>
          <!-- figures/fig_hyperbola_locate1.tex END -->
          <!-- START figures/fig_hyperbola_locate2.tex -->
          <figure xml:id="fig_hyperbola_locateb">
            <caption/>
            <image xml:id="img_hyperbola_locateb">
