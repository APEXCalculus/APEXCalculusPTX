											       (axis cs:0,-3.2) -- node [below,rotate=90,pos=.8] {  axis }node [above,rotate=90,pos=.8] { Conjugate} (axis cs:0,3.2);

        \filldraw [firstcolor] (axis cs:1,0) circle (1.5pt)
												       (axis cs:-1,0) circle (1.5pt);

