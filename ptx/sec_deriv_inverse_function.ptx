        \addplot [tangentline,domain=.42:1.7] ({.5*(x-pi/3)+sqrt(3)/2},{x});
        \addplot [soliddot] coordinates {(0.866,1.06)} node [below right] {$\left(\frac{\sqrt{3}}{2},\frac{\pi}{3}\right)$};
        \end{axis}
