        \begin{axis}[
        axis on top,
        xtick={1,2,3,4},
        ytick=\empty,
        ymin=-.5,ymax=1.75,
        xmin=-.5,xmax=4.5
        ]

        \addplot+ [-,domain=-.5:4.5,samples=40] {.3*cos(deg(x))+1};

