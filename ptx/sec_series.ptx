                        {\begin{tikzpicture}

                          \fill [firstcolor] (0,0) circle (2pt) node [right,black] { $a_n$};
                          \fill [secondcolor] (1,0) circle (0.1pt) node [right, black] { $S_n$};
                          \draw [secondcolor] plot [only marks,mark=square*] coordinates {(1,0)};

                        \end{tikzpicture}};

