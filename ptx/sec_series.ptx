                      \addplot [only marks,firstcolor,mark size={2.4pt}] coordinates {(1,1000.)(2,500.)(3,166.7)(4,41.67)(5,8.333)(6,1.389)(7,0.1984)(8,0.0248)(9,0.002756)(10,0.0002756)};

                      \end{axis}



