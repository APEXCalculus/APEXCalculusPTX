                \addplot [only marks,firstcolor,mark size={1.5pt},domain=1:10,samples=10] {2/(x^2+2*x)};
                \addplot [only marks,secondcolor,mark size={1.5pt},domain=1:10,samples=10] {1.5-1/(x+1)-1/(x+2)};

                \end{axis}



                \node[shift={(0,-17pt)},draw] at (myplot.south)
                  {\begin{tikzpicture}

                    \fill [firstcolor] (0,0) circle (1.5pt) node [right,black] {\scriptsize $a_n$};
                    \fill [secondcolor] (1,0) circle (1.5pt) node [right,black] {\scriptsize $S_n$};

                  \end{tikzpicture}};

                \end{tikzpicture}

                </latex-image>
              </image>
        <!-- figures/fig_series4a.tex END -->
            </figure>

            <figure xml:id="fig_series4b">
              <caption/>
        <!-- START figures/fig_series4b.tex -->
              <image xml:id="img_series4b">
                <description></description>
                <latex-image>

                \begin{tikzpicture}

                \begin{axis}[
                axis on top,
                ymin=-.5,ymax=5,
                xmin=-10,xmax=110,
