                      xlabel={$n$}
                      ]

                      \addplot [only marks,firstcolor,mark size={2.4pt},domain=5:50,samples=10] {((-1)^(x+1)*(x^2-x))/(x^3)};
                      \addplot [only marks,secondcolor,mark=square*,mark size={2.4pt}] coordinates {(5,-0.05528)(10,-0.1723)(15,-0.09917)(20,-0.1525)(25,-0.1105)(30,-0.1452)(35,-0.1156)(40,-0.1414)(45,-0.1186)(50,-0.139)};

                      \end{axis}



                      \node[shift={(0,0pt)},draw] at (myplot.south)
                        {\begin{tikzpicture}

                          \fill [firstcolor] (0,0) circle (2pt) node [right,black] { $a_n$};
