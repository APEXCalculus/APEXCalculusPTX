          <webwork xml:id="webwork-ex-polar-coordinates-convert-1">
              <pg-code>
                Context("Point");
                Context()-&gt;flags-&gt;set(reduceConstants=&gt;0,reduceConstantFunctions=&gt;0);
                @xy=(Compute("(sqrt(2),sqrt(2))"), Compute("(sqrt(2),-sqrt(2))"));
                @rt=(Compute("(sqrt(5),arctan(-1/2))"), Compute("(sqrt(5),pi+arctan(-1/2))"));
                @rtev=map{$_-&gt;cmp(showCoordinateHints =&gt; 0, checker =&gt; sub {
                  my ($correct,$student,$ansHash) = @_;
                  my ($sr,$st) = $student-&gt;value;
                  my ($cr,$ct) = $correct-&gt;value;
                  return (($sr*cos($st) == $cr*cos($ct)) and ($sr*sin($st) == $cr*sin($ct)));
                })}(@rt);
              </pg-code>
              <statement>
                <p>
                  Convert each of the following polar coordinates to rectangular,
                  and each of the following rectangular coordinates to polar.
                </p>

