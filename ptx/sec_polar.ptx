                        <m>(x,y)=</m><var name="$xy[0]" width="30"/>
                      </p>
                    </li>

                    <li>
                      <p>
                        <m>B=P(2,-\pi/4)</m>
                      </p>

                      <p>
                        <m>(x,y)=</m><var name="$xy[1]" width="30"/>
                      </p>
                    </li>

                    <li>
                      <p>
                        <m>C=(2,-1)</m>
                      </p>

                      <p>
                        <m>P(r,\theta)=P</m><var name="$rt[0]" evaluator="$rtev[0]" width="30"/>
                      </p>
                    </li>

